{
	"extends": "eslint:recommended",

	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"es6": true
	},
	"rules": {
		"quotes": [0, "single"],
		"eol-last": [0],
		"no-mixed-requires": [0],
		"eqeqeq": [2],
		"no-else-return": [2],
		"curly": [2],
		"no-const-assign": [2],
		"prefer-const": [1],
		"no-var": [1]
	}
}
